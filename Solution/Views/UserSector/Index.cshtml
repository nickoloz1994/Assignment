@model UserSectorIndexViewModel

<a asp-action="Create" class="btn btn-link">Select sectors</a>

@if (Model.UserSector != null && Model.SelectedSectors != null)
{
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <p><b>User name:</b> @Model.UserSector.UserName</p>

                <p><b>Selected sectors:</b></p>
                @foreach (var item in Model.SelectedSectors)
                {
                    <p>@item.Name</p>
                }
            </div>
            <div class="panel-footer">
                <a asp-action="Edit"
                   asp-route-id="@Model.UserSector.UserSectorId"
                   class="btn btn-info">Edit</a>
                <a asp-action="Delete"
                   asp-route-id="@Model.UserSector.UserSectorId"
                   class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
}