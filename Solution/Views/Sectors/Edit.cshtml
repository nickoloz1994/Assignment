@model SectorEditViewModel

<form asp-action="Edit">
    <input type="hidden" value="@Model.Sector.Id" asp-for="Sector.Id" />
    <div class="form-group">
        <label asp-for="Sector.Name"></label>
        <input type="text" class="form-control" asp-for="Sector.Name" value="@Model.Sector.Name">
    </div>
    <button type="submit" class="btn btn-success">Save changes</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}